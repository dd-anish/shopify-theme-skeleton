<div class="{{ section.settings.container }}">
  <div class="{{ section.settings.left_container }}">
    <div class="{{ section.settings.top_block }}">
      <h2 class="{{ section.settings.heading }}">{{ section.settings.heading_text }}</h2>
      {% form 'contact', class: section.settings.form %}
        <div class="{{ section.settings.form_block }}"> 
            <p class="{{ section.settings.subheading }}">{{ section.settings.subheading_text }}</p>

            <div class="{{ section.settings.input_button_block }}">
                    <input
                        type="tel"
                        name="contact[phone]"
                        placeholder="{{ section.settings.phone_placeholder }}"
                        class="{{ section.settings.input }}"
                        required
                    >
                        <button type="submit" class="{{ section.settings.submit_button }}">
                        {{ section.settings.button_text }}
                        </button>
                    {% if form.errors %}
                    {% for error in form.errors %}
                        <p class="{{ section.settings.form_error }}">
                        {% render 'icon-error' %}
                        {{ error }}
                        </p>
                    {% endfor %}
                    {% endif %}
                    {% if form.posted_successfully? %}
                    <p class="{{ section.settings.form_success }}">
                        {% render 'icon-success' %}
                        {{ section.settings.success_message | escape }}
                    </p>
                    {% endif %}
            </div>
        </div>
      {% endform %}
    </div>
    <div class="{{ section.settings.bottom_block }}">
      <div class="{{ section.settings.bottom_block_first_column }}">
        <h3 class="{{ section.settings.info_heading }}">{{ section.settings.phone_heading }}</h3>
        <div class="{{ section.settings.bottom_block_first_column_info_text_div }}">
          {%- assign svg_class = section.settings.bottom_block_first_column_info_text_icon_SVG -%}
          <div class="{{ section.settings.bottom_block_first_column_info_text_icon_div }}">
            <span> {% render 'icon-social-facebook' class: svg_class %} </span>
            <div class="{{ section.settings.info_text }}">{{ section.settings.phone_1 }} </div>
          </div>
          <div class="{{ section.settings.bottom_block_first_column_info_text_icon_div }}">
            {% render 'icon-social-facebook' class: svg_class %}
            <p class="{{ section.settings.info_text }}">{{ section.settings.phone_2 }}</p>
          </div>
        </div>
      </div>
      <div class="{{ section.settings.bottom_block_second_column }}">
        <h3 class="{{ section.settings.info_heading }}">{{ section.settings.address_heading }}</h3>
        <div class="{{ section.settings.bottom_block_second_column_address_map_div }}">
          {%- assign map_svg_class = section.settings.bottom_block_second_column_SVG -%}
          <div class="{{ section.settings.bottom_block_second_column_address_map_icon_div }}">
            <p class="{{ section.settings.bottom_block_second_column_address_1 }}">{{ section.settings.address_1 }} </p>
          </div>
          
          <div class="{{ section.settings.bottom_block_second_column_address_map_icon_div }}">
            {% render 'icon-social-facebook' class: map_svg_class %}
            <p class="{{ section.settings.bottom_block_second_column_address_2 }}">{{ section.settings.address_2 }}</p>
          </div>
        </div>      
      </div>
    </div>
  </div>
  <div class="{{ section.settings.right_container }}">
    <div class="{{ section.settings.image_container }}">
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 1000 | image_tag:
          loading: 'lazy',
          width: section.settings.image.width,
          height: section.settings.image.height,
          class: section.settings.image_class
        }}
      {% else %}
        {{ 'image' | placeholder_svg_tag: section.settings.placeholder_image_class }}
      {% endif %}
    </div>
    <div class="{{ section.settings.social_container }}">
      <h3 class="{{ section.settings.social_heading_class }}">{{ section.settings.social_heading }}</h3>
      <div class="{{ section.settings.social_icons }}">
        {%- assign svg_class = section.settings.social_icon_svg -%}
        {% if settings.social_instagram_link != blank %}
          <a href="{{ settings.social_instagram_link }}" class="{{ section.settings.social_icon }}" target="_blank" rel="noopener" aria-label="Instagram">
            {% render 'icon-social-instagram' class: svg_class  %}
          </a>
        {% endif %}
        {% if settings.social_pinterest_link != blank %}
          <a href="{{ settings.social_pinterest_link }}" class="{{ section.settings.social_icon }}" target="_blank" rel="noopener" aria-label="Pinterest">
            {% render 'icon-social-pinterest' class: svg_class %}
          </a>
        {% endif %}
        {% if settings.social_facebook_link != blank %}
          <a href="{{ settings.social_facebook_link }}" class="{{ section.settings.social_icon }}" target="_blank" rel="noopener" aria-label="Facebook">
            {% render 'icon-social-facebook' class: svg_class %}
          </a>
        {% endif %}
        {% if settings.social_twitter_link != blank %}
          <a href="{{ settings.social_twitter_link }}" class="{{ section.settings.social_icon }}" target="_blank" rel="noopener" aria-label="Twitter">
            {% render 'icon-social-twitter' class: svg_class %}
          </a>
        {% endif %}
        {% if settings.social_tiktok_link != blank %}
          <a href="{{ settings.social_tiktok_link }}" class="{{ section.settings.social_icon }}" target="_blank" rel="noopener" aria-label="TikTok">
            {% render 'icon-social-tiktok' class: svg_class %}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>


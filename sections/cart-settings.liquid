{% schema %}
{
  "name": "Cart Settings",
  "settings": [
    {
      "type": "text",
      "id": "cart_title",
      "label": "Cart Title",
      "default": "Your Cart"
    },
    {
      "type": "text",
      "id": "cart_empty_message",
      "label": "Empty Cart Message",
      "default": "Your cart is empty"
    },
    {
      "type": "text",
      "id": "checkout_button_text",
      "label": "Checkout Button Text",
      "default": "Checkout"
    },
    {
      "type": "header",
      "content": "Tailwind Classes"
    },
    {
      "type": "textarea",
      "id": "cart_container_classes",
      "label": "Cart Container Classes",
      "default": "fixed inset-y-0 right-0 w-full md:w-96 bg-white shadow-lg transform translate-x-full transition-transform duration-300 ease-in-out z-50"
    },
    {
      "type": "textarea",
      "id": "cart_header_classes",
      "label": "Cart Header Classes",
      "default": "flex justify-between items-center p-4 border-b border-gray-200"
    },
    {
      "type": "textarea",
      "id": "cart_title_classes",
      "label": "Cart Title Classes",
      "default": "text-lg font-semibold"
    },
    {
      "type": "textarea",
      "id": "close_cart_button_classes",
      "label": "Close Cart Button Classes",
      "default": "text-gray-500 hover:text-gray-700"
    },
    {
      "type": "textarea",
      "id": "cart_content_classes",
      "label": "Cart Content Classes",
      "default": "p-4 overflow-y-auto max-h-[calc(100vh-200px)]"
    },
    {
      "type": "textarea",
      "id": "cart_item_classes",
      "label": "Cart Item Classes",
      "default": "flex items-center mb-4 pb-4 border-b border-gray-200"
    },
    {
      "type": "textarea",
      "id": "cart_item_image_classes",
      "label": "Cart Item Image Classes",
      "default": "w-16 h-16 object-cover mr-4"
    },
    {
      "type": "textarea",
      "id": "cart_item_details_classes",
      "label": "Cart Item Details Classes",
      "default": "flex-grow"
    },
    {
      "type": "textarea",
      "id": "cart_item_title_classes",
      "label": "Cart Item Title Classes",
      "default": "text-sm font-semibold"
    },
    {
      "type": "textarea",
      "id": "cart_item_variant_classes",
      "label": "Cart Item Variant Classes",
      "default": "text-xs text-gray-500"
    },
    {
      "type": "textarea",
      "id": "cart_item_price_classes",
      "label": "Cart Item Price Classes",
      "default": "text-sm"
    },
    {
      "type": "textarea",
      "id": "cart_item_quantity_classes",
      "label": "Cart Item Quantity Classes",
      "default": "text-sm"
    },
    {
      "type": "textarea",
      "id": "cart_empty_message_classes",
      "label": "Empty Cart Message Classes",
      "default": "text-center text-gray-500"
    },
    {
      "type": "textarea",
      "id": "cart_footer_classes",
      "label": "Cart Footer Classes",
      "default": "p-4 border-t border-gray-200"
    },
    {
      "type": "textarea",
      "id": "cart_total_classes",
      "label": "Cart Total Classes",
      "default": "text-lg font-semibold mb-4"
    },
    {
      "type": "textarea",
      "id": "checkout_button_classes",
      "label": "Checkout Button Classes",
      "default": "w-full bg-black text-white py-2 px-4 rounded hover:bg-gray-800 transition-colors duration-200"
    }
  ],
  "presets": [
    {
      "name": "Cart Settings"
    }   
  ]
}
{% endschema %}